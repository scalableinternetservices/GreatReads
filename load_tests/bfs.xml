  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds -->
      <thinktime value="2" random="true"></thinktime>

      <!-- get authenticity token from sign up page -->
      <request>
          <dyn_variable name="authenticity_token" ></dyn_variable> 
          <http url="/users/sign_up" version="1.1" method="GET"></http>
      </request>

	<!-- create random numbers -->
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="first" />
      </setdynvars>
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="last" />
      </setdynvars>

      <!-- sign up a new user (currently hard-coding in the username password) -->
      <request subst="true">
          <dyn_variable name="response" re="(.*)"/>
	  <dyn_variable name="user_url" re="[Ll]ocation: (http://.*)\?"/>
	  <dyn_variable name="user_id" re="[Ll]ocation: http://.*?user_id=(.*)\r"/>
          <http url="/users"
              method="POST"
              version="1.1"
              contents="utf8=%E2%9C%93&amp;authenticity_token=%%_authenticity_token%%&amp;user%5Bemail%5D=user%%_first%%%40%%_last%%.com&amp;user%5Bpassword%5D=password%%_first%%%%_last%%&amp;commit=Sign+up"/>
      </request>
	
      <!-- create a new book-->
      <request subst="true">
        <http 	url="/books" 
		method="POST"
              	contents="book%5btitle%5D=book_for_user_%%_first%%%%_last%%"/>
      </request>

      <!-- create a new shelf-->
      <request subst="true">
        <http 	url="/shelves" 
		method="POST"
              	contents="shelf%5Bshelf_name%5D=shelf_for_user_%%_first%%%%_last%%&amp;shelf%5Bshelf_owner%5D=%%_user_id%%"/>
      </request>

      <!-- DELETE the user we just created -->
      <request subst="true">
        <http url="%%_user_url%%users/%%_user_id%%" method="DELETE">
        </http>
      </request>

      <!-- logs all dynamic variables, very useful -->
      <setdynvars sourcetype="eval" code="fun( {Pid, DynVars} ) ->
          io:format([126, $p, 126, $n, 126, $n], [DynVars]),
          ok end.">
          <var name="dump" />
      </setdynvars>


    </session>
  </sessions>
</tsung>
