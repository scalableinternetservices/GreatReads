<p>
  Email:
  <%= user.email %>
  <% unless current_user == user %>
      <% if current_user.follows?(user) %>
        <%= link_to "Unfollow", (current_user.following.find_by person_id: user.id), :method => :delete %>
    <% else %>
        <%= link_to "Follow", followings_path(:person_id => user.id), :method => :post %>
    <% end %>
  <% else %>
      <%= form_for(Shelf.new) do |f| %>
              <div class="field">
        <%= f.hidden_field :shelf_owner, :value => current_user.id %>
        <%= f.text_field :shelf_name %>
      </div>
            <div class="actions">
        <%= f.submit %>
      </div>
        +<% end %>
<% end %>
</p>
