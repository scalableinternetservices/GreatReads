<p>
	Name:
	<%= user.first %>&nbsp;<%= user.last %>
	<br>
	Email:
	<%= user.email %>
	<% unless current_user == user %>
	<% if current_user.follows?(user) %>
	<%= link_to "Unfollow", (current_user.following.find_by person_id: user.id), :method => :delete %>
	<% else %>
	<%= link_to "Follow", followings_path(:person_id => user.id), :method => :post %>
	<% end %>

	<% end %>
</p>
