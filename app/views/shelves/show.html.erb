<%= render :partial => "layouts/navbar", :locals => { :active => "books" } %>

<p id="notice"><%= notice %></p>

<div class="ui text container">
	<p>
		<strong>Shelf name:</strong>
		<%= @shelf.shelf_name %>
	</p>

	<p>
		<strong>Shelf owner:</strong>
		<%= User.find(@shelf.shelf_owner).email %>
	</p>
	<p>
		<h4>Books</h4>
		<% @books.each do |book| %>
		<br>
		Book: <%= link_to book.title, book%>
		<%end%>
	</p>
	<%= link_to 'Edit', edit_shelf_path(@shelf) %> |
	<%= link_to 'Back', shelves_path %>

	
</div>


