<%= render :partial => "layouts/navbar", :locals => { :active => "books" } %>

<p id="notice"><%= notice %></p>

<div class="ui text container">

  <h1>Listing Shelves</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Owner</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @shelves.each do |shelf| %>
      <tr>
        <td><%= shelf.shelf_name %></td>
        <td><%= shelf.shelf_owner %></td>
        <td><%= link_to 'Show', shelf %></td>
        <td><%= link_to 'Edit', edit_shelf_path(shelf) %></td>
        <td><%= link_to 'Destroy', shelf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Shelf', new_shelf_path %>

</div>