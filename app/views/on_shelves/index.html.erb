<h1>Listing On Shelves</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Shelf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @on_shelves.each do |on_shelf| %>
      <tr>
        <td><%= on_shelf.book_id %></td>
        <td><%= on_shelf.shelf_id %></td>
        <td><%= link_to 'Show', on_shelf %></td>
        <td><%= link_to 'Edit', edit_on_shelf_path(on_shelf) %></td>
        <td><%= link_to 'Destroy', on_shelf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

